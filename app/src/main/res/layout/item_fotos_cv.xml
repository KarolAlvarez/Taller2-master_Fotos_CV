<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_img_item_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#23123450"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/id_tv_item_cv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre user"
                android:textColor="@android:color/white"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/id_tv_item_cv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hace: 4 minutos"
                android:textColor="@android:color/white"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:button="@drawable/checbox_status" />

                <TextView
                    android:id="@+id/id_tv_item_cv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="10 Me gusta"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"

                    />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>